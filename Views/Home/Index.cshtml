@{
    ViewData["Title"] = "Home Page";
}
@model List<Bowler>
<h1>Bowlers</h1>
<table>
    <thead>
        <tr>First Name</tr>
        <tr>Middle Initial</tr>
        <tr>Last Name</tr>
        <tr>Address</tr>
        <tr>City</tr>
        <tr>State</tr>
        <tr>Zip</tr>
        <tr>Phone Number</tr>
        <tr><a class="btn btn-primary" asp-controller="Home" asp-action="AddBowler">Add Bowler</a></tr>

    </thead>
    <tbody>
        @foreach (var b in Model)
        {
            <tr>
                <td>@b.BowlerFirstName</td>
                <td>@b.BowlerMiddleInit</td>
                <td>@b.BowlerLastName</td>
                <td>@b.BowlerAddress</td>
                <td>@b.BowlerCity</td>
                <td>@b.BowlerState</td>
                <td>@b.BowlerZip</td>
                <td>@b.BowlerPhoneNumber</td>
                <td><a class="btn btn-warning" asp-controller="Home" asp-action="EditBowler" asp-route-id="@b.BowlerID">Edit</a></td>
                <td><a class="btn btn-warning" asp-controller="Home" asp-action="DeleteBowler" asp-route-id="@b.BowlerID">Delete</a></td>
            </tr>
        }
    </tbody>
</table>